{
  "extends": [
    "config:base",
    "config:js-app",
    ":automergePatch",
    ":automergeMinor",
    ":semanticCommits"
  ],
  "lockFileMaintenance": true,
  "reviewers": [
    "dankreiger"
  ],
  "packageRules": [
    {
      "packageNames": [
        "typescript",
        "tslint",
        "typedoc"
      ],
      "groupName": "typescript packages",
      "groupSlug": "typescript",
      "minor": {
        "automerge": false
      }
    },
    {
      "packageNames": [
        "^@types"
      ],
      "groupName": "ambient types",
      "groupSlug": "ambient-types",
      "minor": {
        "automerge": false
      }
    }
  ]
}