{
  "name": "ui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api-docs": "scripty",
    "api-report": "scripty",
    "build": "scripty",
    "clean": "scripty",
    "postinstall": "scripty",
    "lint": "scripty",
    "nuke": "scripty",
    "prod-publish": "scripty",
    "proxy-registry": "scripty",
    "sort": "scripty",
    "storybook": "scripty",
    "storybook:build": "build-storybook",
    "test": "scripty",
    "test-publish": "scripty"
  },
  "lint-staged": {
    "packages/**/src/*.{js,ts,tsx,jsx,json,css}": [
      "yarn sort && prettier --single-quote --write"
    ],
    "*.{md,mdx,yml}": [
      "yarn sort && prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.13.16",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@commitlint/config-lerna-scopes": "12.1.1",
    "@microsoft/api-documenter": "7.13.3",
    "@microsoft/api-extractor": "7.14.0",
    "@storybook/addon-actions": "6.2.9",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addon-links": "6.2.9",
    "@storybook/react": "6.2.9",
    "@types/jest": "26.0.22",
    "@types/styled-components": "5.1.9",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "babel-loader": "8.2.2",
    "commitlint": "12.1.1",
    "eslint": "7.24.0",
    "eslint-plugin-jest": "24.3.5",
    "husky": "5.2.0",
    "is-ci": "3.0.0",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "scripty": "2.0.0",
    "sort-package-json": "1.49.0",
    "styled-components": "5.2.3",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=14.15",
    "yarn": ">=1.22"
  },
  "scripty": {
    "path": "./scripts/workspaces"
  }
}